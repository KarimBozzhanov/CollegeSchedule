            @foreach (var item in Model.Where(s => s.DayOfTheWeek == 1 && s.SubjectNumber == 3))
            {
                <th>@item.SubjectNumber</th>
                <th>@item.LessonTime</th>
                <th>@item.Room</th>
                <th>@item.SubjectDenominator</th>
                <th>@item.Teacher?.teacherFullName</th>
            }
        </tr>
        <tr>
            @foreach (var item in Model.Where(s => s.DayOfTheWeek == 1 && s.SubjectNumber == 4))
            {
                <th>@item.SubjectNumber</th>
                <th>@item.LessonTime</th>
                <th>@item.Room</th>
                <th>@item.SubjectDenominator</th>
                <th>@item.Teacher?.teacherFullName</th>
            }
        </tr>
        <tr>
            <th rowspan="4" class="day_of_the_week">Вторник</th>
            @foreach (var item in Model.Where(s => s.DayOfTheWeek == 2 && s.SubjectNumber == 1))
            {
                <th>@item.SubjectNumber</th>
                <th>@item.LessonTime</th>
